
<div class="filter">
<div class="look">
  <div>
     <input type="text" name="name" id="name" class="form-control form-control-sm look-serie" placeholder="Look serie for name">
  </div>
  <div>
    <button class="btn btn-outline-light btn-sm"><i class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i></button>
  </div>
</div>

<div class="look">
  <div>
    <select name="genre" id="genre" class="form-select form-select-sm look-genre">
      <option value="0">Select a genre</option>
    </select>
  </div>
  <div>
    <button class="btn btn-outline-light btn-sm"><i class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i></button>
  </div>
</div>
</div>

<div class="container">
  {{#if hasSeries}}
    {{#each seriesData}}
      <div class="card">
        <img class="img-size" src="{{this.imageUrl}}" alt="" />
        <div class="card-body">
          <p>{{this.name}}</p>
          <p>{{this.genre}}</p>
          <p>
            <i class="fa-solid fa-star" style="color: #11fa00;"></i>
            <i class="fa-solid fa-star" style="color: #11fa00;"></i>
            <i class="fa-solid fa-star" style="color: #11fa00;"></i>
          </p>
        </div>
        <div class="buttons">
            <a class="btn btn-light">Details</a>
        </div>
      </div>
    {{/each}}
  {{else}}
    <h3 class="title-no_series">There is no series</h3>
  {{/if}}
</div>